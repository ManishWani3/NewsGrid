<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
    integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous" />
  <link href="https://fonts.googleapis.com/css?family=Lato|Staatliches" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css" />
  <link rel="stylesheet" media="screen and (max-width: 768px)" href="/mobile.css" />
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
  <title>News Submission Form</title>
</head>

<body>

  {{>nav}}


  <section class="newsform">
    <div class="container">
      <h1 class="l-heading">Submit an News</h1>
      <form action="/news_submission/news-submission" method="POST" enctype="multipart/form-data" id="newssub">
        <div class="page-container">
          <div class="card1">
            <h2>Author Details</h2>
            <p>Please enter your contact details, so we can give you proper credits
              for post</p>
            <div>
              <label for="uid">UserID*</label><br>
              <input type="number" id="uid" placeholder="Enter your UserID" name="id" required>
            </div>
            <div>
              <label for="name">Name*</label><br>
              <input type="text" id="name" placeholder="Enter your full name" name="fname">
            </div>
            <div>
              <label for="email">E-mail*</label><br>
              <input type="email" id="email" placeholder="Enter your email here" name="email">
            </div>
            <div>
              <label for="bio">Short Author Bio*</label><br>
              <textarea rows="8" cols="50" id="bio" name="bio"></textarea>
              <p>Please keep it below 300 characters.</p>
            </div>
          </div>
          <div class="card1">
            <div>
              <h2>News Details</h2>
              <p>Please enter news details</p>
            </div>

            <div>
              <label for="date">News Date*</label><br>
              <input type="datetime-local" id="date" name="newsdate">
            </div>

            <div>
              <label for="adress">News Address*</label><br>
              <input type="address" id="addess" placeholder="Address of news" name="newsaddress">
            </div>

            <div class="stud">
              <div>
                <label for="city">News city*</label><br>
                <input type="city" id="city" placeholder="City" name="newscity">
              </div>

              <div>
                <label for="state">News State*</label><br>
                <input type="state" id="state" placeholder="State" name="newsstate">
              </div>

              <div>
                <label for="country">News country*</label><br>
                <input type="country" id="country" placeholder="Country" name="newscountry">
              </div>

              <div>
                <label for="zip">News zip-code*</label><br>
                <input type="zip code" id="zip" placeholder="zip code" name="newszipcode">
              </div>
            </div>
            <div>
              <label for="news">News*</label><br>
              <textarea name="news" id="news" cols="50" rows="10"></textarea>
            </div>
            <div>
              <label for="files">Select files:*</label>
              <input type="file" id="files" name="files1" required multiple>
            </div>
          </div>

        </div>
      </form>
      <button class="btn-form" type="submit" form="newssub" value="Submit"><b>Submit</b></button>
    </div>

  </section>

  {{>footer}}

</body>

</html>